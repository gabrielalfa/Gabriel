@model  IEnumerable<Corrida_Bohrer.Models.Jogos>

@{
    ViewBag.Title = "Atual - Corrida Campeões";
}


<!-- PAGE TITLE
================================================== -->
<section class="pageheader-default text-center">
    <div class="semitransparentbg">
        <h1 class="animated fadeInLeftBig notransition">Listagem de Jogos Temporada 1/2015</h1>
        <p class="animated fadeInRightBig notransition container wowbreadcr">
            Corrida dos Campeões - Bohrer Sports
        </p>
    </div>
</section>
<div class="wrapsemibox">
    <div class="semiboxshadow text-center">
        <img src="img/shp.png" class="img-responsive" alt="">
    </div>
    <!-- BLOG
    ================================================== -->
    <section class="container animated fadeInDown notransition">
        <div class="row blogindex">
            <!-- MAIN -->
            <div class="col-md-9">
                <div class="text-center">
                    <h2>Jogos dos mês <span class="colortext">Outubro</span> Corrida dos Campeões</h2>
                    <span class="meta bottomspace30">Atualizado <a href="#" title="Posts by Henry Austin" rel="author">Adm. Bohrer</a> <span class="bullet">•</span> November 12, 2015 <span class="bullet">•</span> <a href="/Home" title="View all posts in Food &amp; Health" rel="category tag">Corrida &amp; Campeões</a></span>
                </div>
                <div class="row">
                    <div class="col-md-12">

                        <form action="/Jogos/Exmplo" method="post">
                            <table class="table table-hover ">
                                <tr>
                                    <th>Imagem</th>
                                    <th>Nome</th>
                                    <th>Aprov.</th>
                                    <th>Nº Jogo</th>
                                    <th>Vitórias</th>
                                    <th>Dia</th>
                                    <th>Horário</th>
                                   
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @Html.HiddenFor(x=>item.id)
                                        <td><img src="@item.path_j1" style="width:50px; height:50px" class="img-circle" alt="Alternate Text" /></td>
                                        <td valign="middle">@item.Nome_j1</td>
                                        <td valign="middle">X</td>
                                        <td valign="middle">@item.Nome_j2</td>
                                        <td valign="middle"><img src="@item.path_j2" style="width:50px; height:50px" class="img-circle" alt="Alternate Text" /></td>
                                        <td valign="middle">21/04</td>
                                        <td valign="middle">14:00</td>
                                       
                                    </tr>

                                }
                            </table>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">

                    </div>
                </div>

            </div>
            <!-- SIDEBAR -->
            <div class="col-md-3">
                <aside class="sidebar topspace30">
                    <div class="wowwidget">
                        <h4>Categories</h4>
                        <ul class="categories">
                            @for (int i = 1; i < 12; i++)
                            {
                                var dt = DateTime.Today.Month;
                                var mes = "";
                                if (i == 1) { mes = "janeiro"; }
                                if (i == 2) { mes = "fevereio"; }
                                if (i == 3) { mes = "março"; }
                                if (i == 4) { mes = "abril"; }
                                if (i == 5) { mes = "maio"; }
                                if (i == 6) { mes = "junho"; }
                                if (i == 7) { mes = "julho"; }
                                if (i == 8) { mes = "agosto"; }
                                if (i == 9) { mes = "setembro"; }
                                if (i == 10) { mes = "outubro"; }
                                if (i == 11) { mes = "novembro"; }
                                if (i == 12) { mes = "dezembro"; }

                                var someVariable = "Programação: " + mes;
                                if (mes == "abril")
                                {
                                    <li class="info"><a href="#">@someVariable</a></li>
                                }
                                else
                                {
                                    <li><a href="#">@someVariable</a></li>
                                }

                            }


                        </ul>
                    </div>


                </aside>
            </div>
            <!-- end sidebar -->
        </div>
    </section>
    <!--CALL TO ACTION PANEL
    ================================================== -->
    <!-- /. end call to action-->
</div>
<!-- /.wrapsemibox end-->
