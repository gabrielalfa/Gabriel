                                var mes = "";
                                if (i == 1) { mes = "janeiro"; }
                                if (i == 2) { mes = "fevereio"; }
                                if (i == 3) { mes = "março"; }
                                if (i == 4) { mes = "abril"; }
                                if (i == 5) { mes = "maio"; }
                                if (i == 6) { mes = "junho"; }
                                if (i == 7) { mes = "julho"; }
                                if (i == 8) { mes = "agosto"; }
                                if (i == 9) { mes = "setembro"; }
