@{
    ViewBag.Title = "Logar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />  


<section class="container services">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 animated fadeInLeft notransition">
            <div class="box effect2">
                <h4>Login Administrativo</h4>
                <p>
                    Esse login é exclusivamente administrativo.
                    @ViewBag.msg;
                </p>
                <div class="done">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        Your message has been sent. Thank you!
                    </div>
                </div>
                <form method="post" action="/Administrador/Logar" id="contactform">
                    <div class="form">
                        <input class="col-md-12" type="text" name="email" placeholder="Email" required="required">
                        <input class="col-md-12" type="password" name="pass" placeholder="Password" required="required">
                        <input type="submit" id="submit" class="btn btn-default" value="Logar">
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</section>
